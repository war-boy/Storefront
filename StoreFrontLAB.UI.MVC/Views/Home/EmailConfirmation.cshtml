@model StoreFrontLAB.UI.MVC.Models.ContactViewModel

@{
    ViewBag.Title = "Email Confirmation";
}

<h2>@ViewBag.Title</h2>

<div>
    <hr />
    <h4>We successfully received the following message. We will respond back as soon as possible to @Model.Email@(".") Thank you for contacting us!</h4>
    <br/>
    <p>Name: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Subject: @Model.Subject</p>
    <p>Message: @Model.Message</p>
</div>
<p>
    @Html.ActionLink("Back to Home Page", "Index")
</p>
